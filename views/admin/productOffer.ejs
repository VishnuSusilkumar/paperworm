                    <!-- Add Offer Button -->
                    <div class="text-center mt-3">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addOfferModal">Add Offer</button>
                    </div>
                    <!-- / Add Offer Button -->
                </div>

                
                <!-- Bootstrap Dark Table -->
                <div class="card">
                    <h5 class="card-header">Product Offer</h5>
                    
                    <div class="table-responsive p-3">
                        <table class="table table-dark py-3" id="example">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Discount</th>
                                    <th>Price</th>
                                    <th>New Price</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                                <tbody class="table-border-bottom-0">
                                    <% books.forEach((book) => { %>
                                    <% if (book.discountOffer) { %>
                                    <tr>
                                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= book.bookName %></strong></td>
                                        <td><strong><%= book.discountOffer %>%</strong></td>
                                        <% if(book.isOfferProduct === true) { %>
                                          <td><strong><%= book.price %></strong></td>
                                          <td><strong><%= book.productOfferPrice %></strong></td>
                                        <% } else { %>
                                          <td><strong><%= book.price %></strong></td>
                                          <td><strong><%= book.productOfferPrice %></strong></td> 
                                        <% } %>
                                        <% if (book.isOfferProduct === true) { %>
                                        <td><span class="badge bg-label-success me-1">Active</span></td>
                                        <% } else { %>
                                        <td><span class="badge bg-label-warning me-1">In Active</span></td>
                                        <% } %>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                                    data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <button type="button" class="dropdown-item" data-toggle="modal" data-target="#editOfferModal<%= book._id %>"><i class="bx bx-edit-alt me-1"></i> Edit</button>
                                                    <% if (book.isOfferProduct) {%>
                                                      <a class="dropdown-item" href="/admin/inActiveOffer/<%= book._id %>" ><i class="bx bx-block me-1"></i> InActive</a>
                                                    <% }else{ %>
                                                      <a class="dropdown-item" href="/admin/activeOffer/<%= book._id %>"><i class="bx bx-lock-open-alt me-1"></i> Active</a>
                                                    <% } %>
                                                  </div>
                                            </div>
                                        </td>

                                       
                                        <!-- Edit Offer Modal -->
                                        <div class="modal fade" id="editOfferModal<%= book._id %>" tabindex="-1" role="dialog" aria-labelledby="editOfferModalLabel"
                                            aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <form id="editOfferForm" action="/admin/editProductOffer/<%= book._id %>" method="post" onsubmit="return editOfferProduct()">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="editOfferModalLabel">Edit Product Offer</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                          <div id="editOfferError"></div>
                                                            <input type="hidden" name="bookId" value="<%= book._id %>">
                                                            <div class="form-group">
                                                                <label for="currentDiscount">Current Discount Offer:</label>
                                                                <input type="text" class="form-control" id="currentDiscount" value="<%= book.discountOffer %>%" readonly>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="newDiscountPercentage">New Discount Percentage:</label>
                                                                <input type="number" class="form-control" id="newDiscountPercentage"
                                                                    name="newDiscountPercentage" min="0" max="100" required>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary">Update Offer</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- / Edit Offer Modal -->


                                    </tr>
                                    
                                    <% } %>
                                    <% }) %>
                                    
                                </tbody>
                                
                              </table>
                              
                            </div>
                          </div>
                          <!--/ Bootstrap Dark Table -->
            </div>
            <!-- / Content -->


            <div class="content-backdrop fade"></div>

            
                <!-- Add Offer Modal -->
                <% books.forEach((book) => { %>
